<%= render 'shared/navbar' %>
<br><br>
<div class="container mt-5 mb-5">
  <div class="container">
    <h4>My Offers</h4>
    <p>Keep track of your offered vans and accept or decline a booking.</p>
  </div>
  <div class="container">
    <div class="row justify-content-between">
      <% if @offers.nil?%>
        <div class="container mt-5">
          <p><i>Nothing to display here. You are currently not offering a van for rent or nobody has booked it.</i></p>
        </div>
      <% else %>
       <% @offers.each do |offer| %>
          <div class="card  mb-4" style="width: 18rem; border-radius: 7px; box-shadow: 0 0 15px rgba(0, 0, 0, 0.2)">
              <%= cl_image_tag offer.van.photo.key, crop: :fill, class: "card-img-top" %>
            <div class="card-body">
              <% if offer.confirmed %>
                <p class="card-text status-green" style="border-radius: 50px">Confirmed</p>
              <% else %>
                <p class="card-text status-red" style="border-radius: 50px">Not confirmed</p>
              <% end %>
                <h5><%= link_to offer.van.title, van_path(offer.van) %></h5>
                <p class="card-text"><%= offer.user.first_name %> <%= offer.user.last_name %></p>
                <p class="card-text"><%= offer.user.email %></p>
                <p class="card-text"><%= offer.start_date %> â€“ <%= offer.end_date %></p>
                <a href="#" class="btn btn-secondary" style="color: white; border-radius: 50px">Accept</a>
                <a href="#" class="btn btn-secondary" style="border-radius: 50px">Decline</a>
            </div>
          </div>
            <% end %>
        <% end %>
      </div>
    </div>
</div>
