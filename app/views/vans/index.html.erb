<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1515642937189-101a1692e3b3?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80)">
</div>
<div class="container mt-5">
  <div class="search-bar">
    <%= form_tag vans_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a van"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>

  <% @vans.each do |van| %>
    <div>
      <%= van.title %>
      <%= van.description %>
      <%= van.brand %>
      <%= van.model %>
      <%= van.price_per_day %>
      <%= van.location %>
    </div>
    <div>
      <img src="<%= van.photo %>v" alt="">
    </div>
  <% end %>

</div>
