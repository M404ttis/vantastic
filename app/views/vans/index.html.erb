<%= render 'shared/navbar-home' %>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1608&q=80)">
</div>
<div class="container mt-5">
  <div class="search-bar">
    <%= form_tag vans_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a van"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>

  <% @vans.each do |van| %>
    <div class="card-product">
      <% if van.photo.attached? %>
      <%= cl_image_tag van.photo.key, crop: :fill %>
      <% else %>
      <img src="<%= van.photo_url %>" alt="">
      <% end %>
      <div class="container-card">
        <div class="card-product-infos">
          <div class="row">
            <h1><%= van.title %></h1>
          </div>
          <div class="row">
            <h2><%= van.brand %> - <%= van.model %></h2>
          </div>
          <div class="row">
            <p><%= van.description %></p>
          </div>
          <div class="row loc">
            <p><%= van.location %></p>
          </div>
          <div class="col-right">
            <p><%= van.price_per_day %> â‚¬/per day</p>
            <%= link_to 'Continue', van_path(van.id) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
